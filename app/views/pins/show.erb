<div class="panel-body">
  <div class="row">
   <div class="col-md-1">
      <%= image_tag("ruby-logo-thumbnail.png") %>
    </div>
   <div class="col-md-3">
     <p>
      <%= @pin.text %>
     </p>
    </div>
  </div>
  <hr>
  <p><b>Visit <%= @pin.title %></b>
   <%= link_to "#{@pin.url}" %>
  </p>
</div>
<hr/>
<%= form_for(@pin) do |f| %>

<%= f.fields_for :pinning do |p| %>
  <div class="form-group">
    <label>Repin to One of My Boards</label>
    <%= p.collection_select(:board_id, current_user.boards, :id, :name, {}, {class: "form-control"}) %>
    <%= p.hidden_field :user_id, value: current_user.id %>    
<% end %> 

  <div class="actions">
    <%= f.submit "REPIN" %>
  </div>
<% end %>
<a href="/">
   <%= image_tag('rails-logo-thumbnail.png') %>
   Back to Home
</a

