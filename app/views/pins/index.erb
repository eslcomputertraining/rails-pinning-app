
<hr/>
  <% if !session[:user_id] %>
     <h1><button><a button name="button" type="login" href="/login">Login</a></button></h1>
  <% end %>
<div class="pin">
  <% @pins.each_slice(3) do |row| %>
    <div class="row">
      <% row.each do |pin| %>      
        <div class="pin-container col-md-4">
          <div class="pin">
            <div class="pin-header row">
              
              <div class="logo-thumbnail col-xs-3">
                  <% if pin.slug.include?("monk") %>
                    <%= image_tag('buddha.png') %>
                  <% elsif pin.slug.include?("ruby") %>
                    <%= image_tag('ruby-logo-thumbnail.png') %>
                  <% else %>
                    <%= image_tag('rails-logo-thumbnail.png') %>
                  <% end %>
                </div>  
                
                <div class="col-xs-9">
                <h4>
                  <%= link_to "#{pin.title}", pin_by_name_path(slug: pin.slug) %>
                </h4>
                  <%= link_to "#{pin.url.truncate(20)}", "#{pin.url.truncate(30)}", html_options = {target: "_blank", class: "url" } %>
                                
                </div>
                
            </div>
              
            <hr/>
            <p class="text"><%= "#{pin.text}" %></p>
            
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
