<%= form_for(pin) do |f| %>
  <% if pin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(pin.errors.count, "error") %> prohibited this pin from being saved:</h2>

      <ul>
      <% pin.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: "Title" %>
  </div>

  <div class="field">
    <%= f.label :url %>
    <%= f.text_field :url, placeholder: "http://www.yourdesiredsite.com"  %>
  </div>

  <div class="field">
    <%= f.label :text %>
    <%= f.text_field :text, placeholder: "Description"  %>
  </div>

  <div class="field">
    <%= f.label :slug %>
    <%= f.text_field :slug, placeholder: "New URL" %>
  </div>

  <div class="field">
    <%= f.label :category %>
    <%= f.select(:category_id) do %>
      <%= content_tag(:option, "Select Category") %>
      <% [['ruby', 1], ['rails', 2], ['some unknown kind', 3]].each do |c| %>
        <%= content_tag(:option, c.first, value: c.last) %>
      <% end %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field(:image_file_name) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

  <button name="button" type="submit" class="btn btn-default">Add</button>
  <a button name="button" type="submit" class="btn btn-danger" href="/">Cancel</a>
  <a button name="button" type="submit" class="btn btn-default" href="/">Back to Home</a>
